public class Day6_4 
{

	public static int sum(int... a)
	{
		int result = 0;
		for(int element : a)
			result = element + result;
		return result;
	}
	
	
	public static void main(String[] args) 
	{
		int result = sum(10,20);
		System.out.println("Result = "+result);
		
		result = sum(50,40,90);
		System.out.println("Result = "+result);
		

	}

}
