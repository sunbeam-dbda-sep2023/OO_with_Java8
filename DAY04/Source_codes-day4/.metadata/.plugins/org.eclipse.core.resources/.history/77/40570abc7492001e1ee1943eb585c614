class Account
{
	static int balance; // static field
	
	void deposit()
	{
		balance = balance + 5000;
	}
	
	void withdraw()
	{
		balance = balance - 1000;
	}
	void disp()
	{
		System.out.println("Balance = "+balance);
	}
}
public class Day4_15 {

	public static void main(String[] args) 
	{
		Account a1 = new Account();
		a1.deposit();
		a1.disp();
		a1.withdraw();
		a1.disp();
	}

}
