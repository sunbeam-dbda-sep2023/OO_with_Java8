// can we take input from user for final variables? YES 
public class Day4_8 {

	public static void main(String[] args) 
	{
		final int num; // constant variable declaration
		Scanner sc = new Scanner(System.in);
		System.out.println("Please enter one number : ");
		num = sc.nextInt();
		System.out.println("num value = "+num); 
			
		// javac error ==> uninitialized 
		
		
	}

}
